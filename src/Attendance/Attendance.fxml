<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Attendance.AttendanceController">
    <children>
        <TableView fx:id="list_table" stylesheets="@../StyleCheet/style.css" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="id_col" maxWidth="200.0" minWidth="100.0" prefWidth="-1.0" text="ID"/>
                <TableColumn fx:id="name_col" maxWidth="400.0" minWidth="300.0" prefWidth="-1.0" text="Name"/>
                <TableColumn fx:id="present_col" maxWidth="100.0" minWidth="90.0" onEditCommit="#takeAtten"
                             prefWidth="-1.0" text="Present"/>
                <TableColumn fx:id="excuse_col" maxWidth="1.7976931348623157E308" minWidth="400.0"
                             onEditCommit="#takeAtten" prefWidth="-1.0" text="Excuse"/>
            </columns>
        </TableView>
        <Label text="Tip: just type 1 for present and 0 for absent">
            <font>
                <Font size="8.0"/>
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
